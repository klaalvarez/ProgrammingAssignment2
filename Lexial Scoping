## This program enables to save matrices and its inversion in a caches.

## I simply converted the input x to a matrix, set the answered value "ans" to a null, and then replaced all references to "mean" to "answer."

DoCacheMatrix <- function(x = matrix(1:100)) {
  I <- NULL
  set <- function(x) {
    y <<- x
    NL <<- NULL
  }
  take <- function() y
  setcba <- function(answer) ans <<- answer
  getabc <- function() ans
  list(set = set, take = take, setcba = setcba, getabc = getabc)
}


## This program answers the inversion of the above matrix. 

DoCacheSolve <- function(y, ...) {
  NL <- y$take()
  if(!is.null(NL)) {
    message("Data Collected!!!")
    return(NL)
  }
  DATA <- y$take()
  NL <- answer(DATA, ...)
  x$setabc(NL)
  NL
}
